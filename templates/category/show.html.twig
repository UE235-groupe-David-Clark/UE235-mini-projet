{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

    <div class="center">

        <h1>Category</h1>
        <a class="createnew" href="{{ path('category_index') }}">back to list</a>

    </div>

    <table class="table persotable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <div class="edit">
        <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
    </div>

    <div class="delete">
        {{ include('category/_delete_form.html.twig') }}
    </div>

{% endblock %}
